rl_to_ui_key :: proc(key: rl.KeyboardKey) -> ui.Key {
	idx := i32(key)
	if idx < 0 || idx >= len(RL_TO_UI) do return .None
	return RL_TO_UI[key]
}

ui_to_rl_key :: proc(key: ui.Key) -> rl.KeyboardKey {
	idx := i32(key)
	if idx < 0 || idx >= len(UI_TO_RL) do return .KEY_NULL
	return UI_TO_RL[ui.Key(idx)]
}
